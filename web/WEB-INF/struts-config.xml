<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="helloWorldForm" type="com.ultraamps.web.formbeans.HelloWorldForm"/>
	</form-beans>

	<action-mappings>

		<action path="/Welcome" 
				<!-- this will only forward to another page -->
				type="org.apache.struts.actions.ForwardAction" 
				parameter="login.jsp">
			<forward name="success" path="/login.jsp"/>
		</action>

		<action path="/*OrderAction" 
				type="actions.OrderAction" 
				name="helloWorldForm" 
				scope="session">
			<forward name="success" path="/orderEdit.jsp"/>
		</action>

		<action path="/*OrderAction" 
				type="actions.OrderAction" 
				name="helloWorldForm" 
				scope="session">
			<forward name="success" path="/orderEdit.jsp"/>
		</action>

		<action path="/*OrderAction" 
				type="actions.OrderAction" 
				name="helloWorldForm" 
				scope="session">
			<forward name="success" path="/orderEdit.jsp"/>
		</action>

	</action-mappings>

</struts-config>
